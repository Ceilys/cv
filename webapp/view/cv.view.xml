<mvc:View
	controllerName="com.cv.cv.controller.cv"
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:inter="sap.suite.ui.microchart"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	height="42em"
>
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false"
	>
		<headerTitle>
			<ObjectPageHeader
				id="headerForTest"
				headerDesign="Light"
				objectTitle="{cv>/cv/firstName} {cv>/cv/lastName}"
				showTitleSelector="false"
				showMarkers="true"
				markFavorite="true"
				markFlagged="true"
				markChanges="false"
				objectSubtitle="{cv>/cv/title}"
				objectImageURI="{cv>/cv/photo}"
				objectImageShape="Circle"
				isObjectIconAlwaysVisible="false"
				isObjectTitleAlwaysVisible="false"
				isObjectSubtitleAlwaysVisible="false"
				isActionAreaAlwaysVisible="true"
				showPlaceholder="true"
			>
				<actions>
					<ObjectPageHeaderActionButton
						text="Public Profile"
						iconFirst="true"
						icon="sap-icon://edit"
						press="handlePress"
						tooltip="edit"
					/>
					<ObjectPageHeaderActionButton
						text="Take Action"
						iconFirst="true"
						icon="sap-icon://action"
						tooltip="action"
					/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:Label text="{cv>/cv/tel}"/>
				<m:Link text="{cv>/cv/mail}"/>
				<layout:HorizontalLayout>
					<m:Image
						height="24px"
						width="24px"
						src="./test-resources/sap/uxap/images/linkedInIcon.png"
					/>
				</layout:HorizontalLayout>
			</layout:VerticalLayout>
			<m:Text
				width="200px"
				text="{cv>/cv/resume}"
			/>
			<layout:VerticalLayout>
				<m:Label text="Technique"/>
				<layout:HorizontalLayout>
					<m:Button
						id="bu-tech"
						icon="sap-icon://filter"
						class="sapUiSmallMarginBottom"
						text="Filtrer"
						iconFirst="false"
						press="onTechnPress"
					/>
					<m:SegmentedButton
						id="sb-tech"
						class="sapUiSmallMarginBottom"
						items="{
							path: 'cv>/cv/skills',
							filters: [{
								path: 'cat',
								operator: 'EQ',
								value1: 'Technique'
							}]
						}"
						selectionChange="onTechnPress"
					>
						<m:items>
							<m:SegmentedButtonItem
								text="{cv>typ}"
								tooltip="{cv>typ}"
								key="{cv>kw}"
								width="8em"
							/>
						</m:items>
					</m:SegmentedButton>
				</layout:HorizontalLayout>
				<m:Label text="Fonctionnel"/>
				<layout:HorizontalLayout>
					<m:Button
						id="bu-fct"
						icon="sap-icon://filter"
						class="sapUiSmallMarginBottom"
						text="Filtrer"
						iconFirst="false"
						press="onFctPress"
					/>
					<m:SegmentedButton
						id="sb-fct"
						class="sapUiSmallMarginBottom"
						items="{
							path: 'cv>/cv/skills',
							filters: [{
								path: 'cat',
								operator: 'EQ',
								value1: 'Fonctionnel'
							}]
						}"
						selectionChange="onFctPress"
					>
						<m:items>
							<m:SegmentedButtonItem
								text="{cv>typ}"
								key="{cv>kw}"
								tooltip="{cv>typ}"
								width="8em"
							/>
						</m:items>
					</m:SegmentedButton>
				</layout:HorizontalLayout>
			</layout:VerticalLayout>
		</headerContent>
		<sections>
			<ObjectPageSection title="{cv>/cv/histo}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{cv>/cv/hist}">
								<m:FeedListItem
									sender="{cv>company}"
									icon="{cv>Logo}"
									iconDensityAware="false"
									info="{cv>Role} ({cv>duration} mois)"
									timestamp="{cv>dtDeb}"
									text="{cv>Detail}"
								/>
							</m:List>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{cv>/cv/comp}">
				<subSections>
					<ObjectPageSubSection title="Techniques">
						<blocks>
							<!--m:List items="{cv>/cv/skills}">
								<m:StandardListItem
									title="{cv>typ}"
									info="{cv>cat}"
								/>
							</m:List-->
							<m:FlexBox
								width="22rem"
								height="13rem"
								justifyContent="SpaceBetween"
							>
								<m:items>
									<inter:InteractiveDonutChart
										selectionEnabled="false"
										displayedSegments="{cv>/cv/skTotT}"
										segments="{
											path: 'cv>/cv/skills',
											filters: [{
												path: 'cat',
												operator: 'EQ',
												value1: 'Technique'
											}]
										}"
									>
										<inter:segments>
											<inter:InteractiveDonutChartSegment
												label="{cv>typ}"
												value="{cv>perc}"
												displayedValue="{cv>perc}%"
											/>
										</inter:segments>
									</inter:InteractiveDonutChart>
								</m:items>
							</m:FlexBox>
						</blocks>
					</ObjectPageSubSection>
					<ObjectPageSubSection title="Fonctionnelles">
						<blocks>
							<m:FlexBox
								width="20rem"
								height="10rem"
								justifyContent="SpaceBetween"
							>
								<m:items>
									<inter:InteractiveDonutChart
										selectionEnabled="false"
										displayedSegments="{cv>/cv/skTotF}"
										segments="{
											path: 'cv>/cv/skills',
											filters: [{
												path: 'cat',
												operator: 'EQ',
												value1: 'Fonctionnel'
											}]
										}"
									>
										<inter:segments>
											<inter:InteractiveDonutChartSegment
												label="{cv>typ}"
												value="{cv>perc}"
												displayedValue="{cv>perc}%"
											/>
										</inter:segments>
									</inter:InteractiveDonutChart>
								</m:items>
							</m:FlexBox>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{cv>/cv/form}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{cv>/cv/train}">
								<m:StandardListItem
									title="{cv>training}"
									info="{cv>year}"
								/>
							</m:List>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>