<mvc:View
	controllerName="com.cv.cv.controller.cv"
	xmlns="sap.uxap"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns:m="sap.m"
	height="42em"
>
	<ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		upperCaseAnchorBar="false"
	>
		<headerTitle>
			<ObjectPageHeader
				id="headerForTest"
				headerDesign="Light"
				objectTitle="{cv>/cv/firstName} {cv>/cv/lastName}"
				showTitleSelector="false"
				showMarkers="true"
				markFavorite="true"
				markFlagged="true"
				markChanges="false"
				objectSubtitle="{cv>/cv/title}"
				objectImageURI="{cv>/cv/photo}"
				objectImageShape="Circle"
				isObjectIconAlwaysVisible="false"
				isObjectTitleAlwaysVisible="false"
				isObjectSubtitleAlwaysVisible="false"
				isActionAreaAlwaysVisible="true"
				showPlaceholder="true"
			>
				<actions>
					<ObjectPageHeaderActionButton
						text="Public Profile"
						iconFirst="true"
						icon="sap-icon://edit"
						press="handlePress"
						tooltip="edit"
					/>
					<ObjectPageHeaderActionButton
						text="Take Action"
						iconFirst="true"
						icon="sap-icon://action"
						tooltip="action"
					/>
				</actions>
			</ObjectPageHeader>
		</headerTitle>
		<headerContent>
			<layout:VerticalLayout>
				<m:Label text="{cv>/cv/tel}"/>
				<m:Link text="{cv>/cv/mail}"/>
				<layout:HorizontalLayout>
					<m:Image
						height="24px"
						width="24px"
						src="./test-resources/sap/uxap/images/linkedInIcon.png"
					/>
				</layout:HorizontalLayout>
			</layout:VerticalLayout>
			<m:Text
				width="200px"
				text="{cv>/cv/resume}"
			/>
			<layout:VerticalLayout>
				<m:Label text="Profile completion"/>
				<m:ProgressIndicator
					percentValue="30"
					displayValue="30%"
					showValue="true"
					state="None"
				/>
				<m:HBox>
					<m:Text
						text="Abap"
						class="sapUiSmallMarginBottom"
					/>
					<m:RatingIndicator
						class="sapUiSmallMarginBottom"
						value="4"
						tooltip="Rating Tooltip"
					/>
				</m:HBox>
				<m:HBox>
					<m:Text
						text="Production"
						class="sapUiSmallMarginBottom"
					/>
					<m:RatingIndicator
						class="sapUiSmallMarginBottom"
						value="4"
						tooltip="Rating Tooltip"
					/>
				</m:HBox>
			</layout:VerticalLayout>
		</headerContent>
		<sections>
			<ObjectPageSection title="{cv>/cv/histo}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{cv>/cv/hist}">
								<m:FeedListItem
									sender="{cv>company}"
									icon="{cv>Logo}"
									iconDensityAware="false"
									info="{cv>Role}"
									timestamp="{cv>dtDeb}"
									text="{cv>Detail}"
								/>
							</m:List>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{cv>/cv/form}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{cv>/cv/train}">
								<m:StandardListItem
									title="{cv>training}"
									info="{cv>year}"
								/>
							</m:List>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{cv>/cv/comp}">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:List items="{cv>/cv/skills}">
								<m:StandardListItem
									title="{cv>typ}"
									info="{cv>cat}"
								/>
							</m:List>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
</mvc:View>